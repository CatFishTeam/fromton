{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="my-4">Profil</h1>

        <div class="profile">
            <h3 class="my-3">{{ user.fullname }} : (@{{ user.username }})</h3>
            <p><strong>Email:</strong> {{ user.email }}</p>
            <p><strong>Niveau:</strong> {{ level }}</p>
            <p><strong>Expérience nécessaire pour le prochain niveau:</strong> {{ reste }}</p>

            <h4>Badges</h4>
            <div class="badges">
                {% for badge in badges %}
                    <div class="badges__single">
                        {{ badge.name }}
                        <span>{{ badge.description }}</span>
                    </div>
                {% else %}
                    <p>Aucun badge.</p>
                {% endfor %}
            </div>

            <h4>Notes</h4>
            <div class="ratings">
                {% for rating in ratings %}
                    <div class="ratings__single">
                        <div>
                            {{ rating.cheese.name }}
                            <a class="ml-4 link text-beige2" href="{{ url('cheese_show', {slug: rating.cheese.slug}) }}">Voir la fiche</a>
                        </div>
                        <div>
                            <span>{{ rating.rating.mark }}</span>
                            /5
                        </div>
                    </div>
                {% else %}
                    <p>Aucune note attribuée.</p>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}