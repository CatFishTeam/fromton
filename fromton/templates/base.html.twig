<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Fromton | {% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('build/css/fromton.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    </head>
    <body>
        <span class="js-user-rating" data-is-authenticated="{{ app.user ? 'true' : 'false' }}"></span>
        <div class="burgerMenu__links">
            <ul>
                <li><a href="{{ path('home') }}">Accueil</a></li>
                <li><a href="{{ path('users') }}">Communaut√©</a></li>
                <li><a href="{{ path('cheese_all') }}">Les fromages</a></li>
                <li><a href="{{ path('followers') }}">Ils vous suivent</a></li>
                <li><a href="{{ path('friends') }}">Vous suivez</a></li>
            </ul>
        </div>
        <main>
            {% block navbar %}
                {% include 'components/navbar.html.twig' %}
            {% endblock %}
            {% block body %}{% endblock %}
        </main>

        {% block javascripts %}
            <script src="{{ asset('build/js/fromton.js') }}" type="text/javascript"></script>
            <script type="text/javascript">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        toastr.{{ label }}("{{ message }}");
                    {% endfor %}
                {% endfor %}
            </script>
        {% endblock %}
    </body>
</html>
