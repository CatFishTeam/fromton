<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('build/css/fromton.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            {% include 'components/navbar.html.twig' %}
        {% endblock %}
        <main>
            {% block body %}{% endblock %}
        </main>

        {% block javascripts %}
            <script src="{{ asset('build/js/fromton.js') }}" type="text/javascript"></script>


            <script type="text/javascript">
                {% for label, messages in app.flashes %}
                {% for message in messages %}
                toastr.{{ label }}("{{ message }}");
                {% endfor %}
                {% endfor %}
            </script>

        {% endblock %}
    </body>
</html>
